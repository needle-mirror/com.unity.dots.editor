.entity-hierarchy-item__container
{
    flex-direction: row;

    /* Fixup for hover detection */
    height: 20px;
    margin-top: -1px;
}

.entity-hierarchy-item__column-1
{
    flex: 1 1;
    flex-direction: row;
    align-items: center;

    overflow: hidden;
    -unity-overflow-clip-box: content-box;
}

.entity-hierarchy-item__column-2
{
    flex: 0 0 16px;
    align-items: center;
    margin-right: 4px;
}

.entity-hierarchy-item__icon
{
    flex: 0 0 16px;

    width: 16px;
    height: 16px;
    margin-right: 2px;
}

.entity-hierarchy-item__icon--scene
{
    margin-top: 1px;
    background-image: var(--scene-icon);
}

.entity-hierarchy-item__icon--entity
{
    margin-top: 1px;
    background-image: var(--entity-icon);
}

.entity-hierarchy-item__name-label
{
    flex: 1 0 auto;
}

.entity-hierarchy-item__name-label--scene
{
    -unity-font-style: bold;
}

.entity-hierarchy-item__system-button
{
    width: 16px;
    height: 16px;
    display: none;
}

.entity-hierarchy-item__system-button--entity
{
    margin-top: 3px;
    background-image: var(--system-icon);
}

.entity-hierarchy-item__container:hover .entity-hierarchy-item__system-button--entity
{
    display: initial;
    background-image: var(--go-to-systems-icon);
}

/* Selected state */
.unity-tree-view__item:checked .entity-hierarchy-item__name-label
{
    /* This should probably come with the TreeView theme by default, but in the mean time, here it is. */
    color: var(--theme-line-selection-text-color);
}

.unity-tree-view__item:checked .entity-hierarchy-item__icon--scene
{
    background-image: var(--scene-icon--selected);
}

.unity-tree-view__item:checked .entity-hierarchy-item__icon--entity
{
    background-image: var(--entity-icon--selected);
}

.unity-tree-view__item:checked .entity-hierarchy-item__container:hover .entity-hierarchy-item__system-button--entity
{
    display: initial;
    background-image: var(--go-to-systems-icon--selected);
}
